<h1>Админка</h1>

<h2>Список всех заказов</h2>

{% if (orders) %}
    <table class="table table-striped"> 
        <thead>
            <tr>
                <td>id</td>
                <td>product_price</td>
                <td>Имя</td>
                <td>Фамилия</td>
                <td>phone</td>
                <td>email</td>
                <td>status</td>
            </tr>
        </thead>

        <tbody>
            {% for order in orders %}
                <tr>
                    <td>{{order.id}}</td>
                    <td>{{ order.product_price }}</td>
                    <td><a href="/adminka/orderItem/?id={{ order.id }}">{{ order.userFirstName }}</a></td>
                    <td>{{ order.userLastName }}</td>
                    <td>{{ order.phone }}</td>
                    <td>{{ order.email }}</td>
                    <td>{{ order.status }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% else %}
Заказов нет

{% endif %}


       
